{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "jsxImportSource": "nativewind",
    "strict": true,
    "jsx": "react-native",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
